{% extends '::base.html.twig' %}


{% block pageTitle %}Reset Password{% endblock %}

{% block body %}
<div class="row">
    <div id="alerts" class="col-12">
        {% if app.request.getHost == 'tool.leadgenix.com' %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            This is the development environment. Please use the <a href="http://reports.leadgenix.com" target="_blank">Production Environment</a> for live work.
        </div>
        {% endif %}

        {% for flashType in app.session.flashbag.keys %}
            <div class="alert alert-{{flashType}}">
                {% for flashMessage in app.session.flashbag.get(flashType) %}
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ flashMessage }}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
<div class="widget col-4 col-lg-offset-4 col-md-offset-4">
    <div class="widget-header">
        {{ block('pageTitle') }}
    </div>
    <div class="widget-content">
        <form method="POST" action="" class="form-horizontal">
            {{form_widget(form)}}
            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="Reset Password" class="btn btn-primary" />
                    <a href="{{ path('lg.user.login.login') }}"  class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
